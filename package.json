{
  "name": "react-input-children",
  "version": "2.0.0",
  "description": "A replacement for the base <input> component capable of rendering a child (link, button...) inside the input itself",
  "main": "lib",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "lint": "scriptoni lint src examples test",
    "lint-fix": "scriptoni lint src examples test --fix",
    "preversion": "npm run lint && npm run test && npm run build-examples",
    "prepublish": "npm run build",
    "build-examples": "npm run clean && webpack --config examples/webpack.config.build.babel.js --progress",
    "start": "webpack-dev-server --config examples/webpack.config.babel.js --progress --hot --inline",
    "clean": "rm -f examples/bundle.js examples/bundle.js.map",
    "generate-readme": "node ./generateReadme.js",
    "release-version": "smooth-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buildo/react-input-children.git"
  },
  "keywords": [
    "react",
    "react-component",
    "input",
    "children",
    "form",
    "label",
    "action",
    "button"
  ],
  "author": "Francesco Cioria <francesco@buildo.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/buildo/react-input-children/issues"
  },
  "homepage": "https://github.com/buildo/react-input-children",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-buildo": "^0.1.1",
    "eslint-loader": "^1.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "jest": "^21.2.1",
    "react": "^0.14",
    "react-dom": "^0.14",
    "react-readme-generator": "0.0.1",
    "react-test-renderer": "^16.2.0",
    "require-dir": "^0.3.0",
    "scriptoni": "^0.4.3",
    "smooth-release": "^8.0.4",
    "ts-jest": "^21.2.3",
    "typescript": "^2.4.2",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "peerDependencies": {
    "react": ">= 15"
  },
  "dependencies": {
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.25",
    "prop-types": "^15.6.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.*[.](test))[.](tsx?)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
